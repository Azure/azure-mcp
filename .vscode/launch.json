{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Cosmos Databases List",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/bin/Debug/net9.0/azmcp.exe",
            "args": [
                "cosmos",
                "database",
                "list",
                "--subscription",
                "${input:subscription}",
                "--account-name",
                "${input:cosmosAccountName}",
                "--retry-max-retries", 
                "0"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        },
